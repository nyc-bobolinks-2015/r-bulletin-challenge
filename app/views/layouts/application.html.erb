<!DOCTYPE html>
<html>
<head>
  <title>RBulletin</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class='user-info'>
  <% if logged_in? %>
    <%= link_to 'Logout', logout_path%>
    <%= current_user.username %>
  <% else %>
    <%= link_to 'Login', login_path %>
  <% end %>
</div>
<%= yield %>

</body>
</html>
