<% @categories.each do |c| %>
  <h1><%= c.name %></h1>
  <% c.topics.each do |t|  %>
    <h3><%= link_to t.name, topic_path(t) %></h3>
  <% end %>
<% end %>

<h2>Recent activity</h2>
<% @conversations.each do |c| %>
  <% if c.get_most_recent.length > 0 %>
    <div>
      <%= c.category.name + ' > ' + c.topic.name + ' > ' + c.name %>
    </div>
  <% end %>
<% end %>
