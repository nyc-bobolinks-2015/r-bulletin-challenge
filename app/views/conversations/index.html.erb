<h1>Conversations in <%= @topic.name %> </h1>
<ul>
<%= render @conversations %>
</ul>

<% if current_user %>
<div id="conversation-form" class="form">
<h2>Create New Conversation</h2>
  <%= form_for [@topic, Conversation.new] do |f| %>
    <%= f.hidden_field :topic_id, value: @topic.id %>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <div>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div>
      <%= f.submit  %>
    </div>
  <% end %>
<% end %>
