<h1>Conversations in <%= @topic.name %> </h1>
<ul id="conversation-list">
<%= render @conversations %>
</ul>

<% if current_user %>
<div class="form" id="new-conversation-form">
<h2>Add a conversation</h2>
  <%= form_for [@topic, @new_conversation]  do |f| %>
    <%= f.hidden_field :topic_id, value: @topic.id %>
    <div>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div>
      <%= f.submit  %>
    </div>
  <% end %>
<% end %>
</div>